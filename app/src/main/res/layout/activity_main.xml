<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ads_container">

        <LinearLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_text_to_speech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text To Speech" />

            <Button
                android:id="@+id/btn_more_apps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More Apps" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share" />

            <Button
                android:id="@+id/btn_ads_big_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asd Big Banner" />

            <Button
                android:id="@+id/btn_select_sqlite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT SQLITE" />

            <Button
                android:id="@+id/btn_base_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base Activity" />

            <Button
                android:id="@+id/buttonFlat"
                style="?attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_size_5"
                android:text="Flat button" />

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_size_5"
                card_view:cardCornerRadius="@dimen/common_size_10"
                card_view:cardElevation="@dimen/common_size_5"
                card_view:cardPreventCornerOverlap="false">

                <Button
                    android:id="@+id/buttonRaised"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/raised_button"
                    android:text="Raised button" />
            </android.support.v7.widget.CardView>

            <tatteam.com.app_common.ui.drawable.FlatEffectDrawable
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:background="#ca8547"
                    android:gravity="center"
                    android:text="Flat Effect"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </tatteam.com.app_common.ui.drawable.FlatEffectDrawable>

            <tatteam.com.app_common.ui.drawable.RippleEffectDrawable
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:background="#478dca"
                    android:gravity="center"
                    android:text="Ripple Effect"
                    android:textColor="@android:color/black"
                    android:textSize="17sp" />
            </tatteam.com.app_common.ui.drawable.RippleEffectDrawable>

            <FrameLayout
                android:id="@+id/ads_container_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <FrameLayout
                android:id="@+id/ads_container_native_express"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/ads_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>