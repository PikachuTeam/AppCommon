<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_more_app_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/item_more_app_margin_1"
        android:layout_marginLeft="@dimen/item_more_app_margin_2"
        android:layout_marginRight="@dimen/item_more_app_margin_2"
        android:layout_marginTop="@dimen/item_more_app_margin_1"
        card_view:cardCornerRadius="@dimen/item_more_app_conner_radius">

        <tatteam.com.app_common.ui.drawable.FlatEffectDrawable
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="@dimen/item_more_app_padding">

                <ImageView
                    android:id="@+id/img_app_icon"
                    android:layout_width="@dimen/image_more_app_width"
                    android:layout_height="@dimen/image_more_app_width"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>
        </tatteam.com.app_common.ui.drawable.FlatEffectDrawable>
    </android.support.v7.widget.CardView>

</LinearLayout>